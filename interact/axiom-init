#!/bin/bash

names=("allen" "almeida" "agnesi" "archimedes" "stok" "pry" "chell" "fire" "bango" "cage" "xpn" "luke" "haddix" "omnom" "jobs" "ritchie" "knox" "bleeder" "batman" "blink" "ghost" "metcalf" "hickey" "fightnerd" "pancakes" "kennedy" "jarvis" "unicorn" "medin" "mog" "thl" "cuthbert" "fox" "hunt" "austin" "babbage" "banach" "banzai" "bardeen" "bartik" "bassi" "beaver" "bell" "benz" "black" "blackburn" "blackwell" "bohr" "booth" "borg" "bose" "bouman" "boyd" "brown" "buck" "burnell" "cannon" "carson" "cartwright" "cerf" "chatelet" "cohen" "chaum" "clarke" "colden" "cori" "cray" "curie" "darwin" "davinci" "diffie" "dirac" "dubinsky" "easley" "edison" "einstein" "elbakyan" "elion" "ellis" "engelbart" "euclid" "euler" "faraday" "fermat" "fermi" "franklin" "gagarin" "galileo" "gates" "gauss" "goldberg" "goldstine" "goodall" "gould" "greider" "haibt" "hamilton" "haslett" "hawking" "hellman" "heisenberg" "hermann" "herschel" "hertz" "hodgkin" "hoover" "hopper" "hugle" "hypatia" "jackson" "jang" "jennings" "jepsen" "johnson" "joliot" "jones" "kalam" "kare" "keller" "kepler" "kilby" "kirch" "knuth" "lalande" "lamar" "lamport" "leakey" "lederberg" "lehmann" "lewin" "liskov" "lovelace" "lumiere" "margulis" "matsumoto" "maxwell" "mayer" "mccarthy" "mclaren" "mclean" "mcnulty" "mendel" "mendeleev" "meitner" "meninsky" "merkle" "moore" "morse" "murdock" "moser" "napier" "nash" "neumann" "newton" "nightingale" "nobel" "noyce" "panini" "pare" "pascal" "pasteur" "payne" "perlman" "pike" "ptolemy" "raman" "ride" "ritchie" "rhodes" "robinson" "roentgen" "rosalind" "rubin" "saha" "sammet" "sanderson" "satoshi" "shamir" "shannon" "shaw" "shirley" "sinoussi" "snyder" "solomon" "spence" "stonebraker" "sutherland" "swanson" "swartz" "swirles" "tesla" "tharp" "thompson" "torvalds" "tu" "turing" "volhard" "villani" "wescoff" "wilbur" "wiles" "williams" "williamson" "wilson" "wing" "wozniak" "wright" "wu" "yalow" "yonath")

# Reset
Color_Off='\033[0m'       # Text Reset

# Regular Colors
export Black='\033[0;30m'        # Black
export Red='\033[0;31m'          # Red
export Green='\033[0;32m'        # Green
export Yellow='\033[0;33m'       # Yellow
export Blue='\033[0;34m'         # Blue
export Purple='\033[0;35m'       # Purple
export Cyan='\033[0;36m'         # Cyan
export White='\033[0;37m'        # White

# Bold
export BBlack='\033[1;30m'       # Black
export BRed='\033[1;31m'         # Red
export BGreen='\033[1;32m'       # Green
export BYellow='\033[1;33m'      # Yellow
export BBlue='\033[1;34m'        # Blue
export BPurple='\033[1;35m'      # Purple
export BCyan='\033[1;36m'        # Cyan
export BWhite='\033[1;37m'       # White

gen_name="${names[$RANDOM % ${#names[@]} ]}-$((10 + RANDOM % 20))"
region="$(jq -r '.region' ~/.axiom/axiom.json)"
size="$(jq -r '.default_size' ~/.axiom/axiom.json)"
#domain=$(cat ~/.axiom.json | jq -r '.domain')

box_name=""
connect_shell=false
restore=false

if [ -z "$1" ] || [ "$1" == "--shell" ] | [[ $1 =~ "restore" ]];
then
    name="$gen_name"
else
    name="$1"
fi

for var in "$@"
do
    if [ "$var" == "--shell" ]
    then
        connect_shell=true
    fi
    if [[ "$var" =~ "--restore" ]]
    then
        restore="$(echo "$@" | sed 's/=/ /g' | awk '{ print $2 }')"
    fi
done

notify-send "Axiom Info" "Initializing '$name'..."
echo -e "${BWhite}Initializing '$name'"

image_name="axiom"
image_id="$(doctl compute image list | grep "$image_name" | tail -n 1 | awk '{ print $1 }')"

resp=$(doctl compute droplet create "$name" --image "$image_id" --size "$size" --region "$region")

echo -e "This usually takes about 1 minute and 50 seconds to fully initialize!"
echo -e "Go make yourself a nice tasty beverage!"

# Roughly 30 seconds before the public IP is init'd
sleep 30
ip="$(doctl compute droplet list | grep "$name" | awk '{ print $3 }')"
#dns=$(doctl compute domain records create $domain --record-type A --record-name $name --record-data $ip)

if [ "$connect_shell" == true ]
then
    sleep 90
    echo -e "${Blue} Connecting... ${Color_Off}"
    ip="$(doctl compute droplet list | grep "$name" | awk '{ print $3 }')"
    ssh -p2266 op@"$ip"
else
    sleep 70
    echo -e "${Green}Initialized! Instance accessible at '${BGreen}$ip${Green}'!"
    echo -e "To connect, run '${BGreen}axiom-ssh $name${Green}'${Color_Off}"
fi

echo "{\"instance\":\"$name\"}" | jq > ~/.axiom/profile.json
notify-send "Axiom Info" "$name successfully initialized at $ip!"

[ "$restore" != false ] &&
	sleep 30
    ~/.axiom/interact/axiom-restore "$restore"
