#!/usr/bin/env bash

if [ -z $1 ]
then
    doctl compute droplet list | awk '{ print $2  " "  $3 }'| column -t
else
    if [[ "$1" == "-d" ]]
    then
        doctl compute droplet list | awk '{ print $2 }' | grep -v "Name"
    fi
    if [[ "$1" == "--json" ]]
    then
        doctl compute droplet list -o json
    fi
fi
$HOME/.axiom/interact/header.sh
